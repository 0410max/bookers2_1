<div class='container'>
    <div class='col-md-10'>
        <div class='row'>
            <div class='show__top'>
            <% if @book.errors.any? %>
                <%= @book.errors.count %>件のerrorが発生しました
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
                <%= form_with model:@book do |f| %>
                    Title:<br />
                        <%= f.text_field :title %><br />
                    Body:<br />
                        <%= f.text_field :body %><br />

                    <%= f.submit 'Update Book' %>
                <% end %>
            </div>
            <div class='show__link'>
                <%= link_to 'Show',book_path(@book) %> | <%= link_to 'Back',books_path %>
            </div>
        </div>
    </div>
</div>
